generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int           @id @default(autoincrement())
  name           String
  email          String        @unique
  password       String
  phoneNumber    String?       
  profilePicture String?
  
  createdAt      DateTime      @default(now())
  role           Role          @default(USER)
  reservations   Reservation[]
  passwordResetTokens PasswordResetToken[]
}

enum Role {
  ADMIN
  USER
  STAFF
}

model InventoryItem {
  id            Int       @id @default(autoincrement())
  name          String
  category      String
  currentStock  Int
  quality       String
  supplier      String?
  lastRestocked DateTime?
  expiryDate    DateTime?
  minStock      Int       @default(10)
  reorderLevel  Int?      @default(5)
}

enum InventoryCategory {
  BEVERAGE
  FOOD
  MACHINES
  UTENSILS
  CLEANING
  OTHER
}

model MenuItem {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  available   Boolean @default(true)
  image       String?
}

enum MenuCategory {
  COFFEE   
  TEA
  PASTRY
  BEVERAGE
}

model Cart {
  id          Int      @id @default(autoincrement())
  userId      Int
  items       Json
  totalAmount Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id               Int                @id @default(autoincrement())
  customerName     String
  items            Json
  totalAmount      Float
  status           OrderStatus        @default(PENDING)
  paymentStatus    OrderPaymentStatus @default(PENDING)
  orderPaymentType OrderPaymentType   @default(CASH)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  servedAt         DateTime?
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum OrderPaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum OrderPaymentType {
  CASH
  KHALTI
  ESEWA
}

model Reservation {
  id              Int               @id @default(autoincrement())
  customerName    String
  email           String?
  phone           String?
  reservationTime DateTime
  numberOfPeople  Int
  tableNumber     Int?
  specialRequests String?
  status          ReservationStatus @default(PENDING)
  reservationId   String            @unique
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  Payment         Payment?

  userId  Int?
  user    User?  @relation(fields: [userId], references: [id])
  Table   Table? @relation(fields: [tableId], references: [id])
  tableId Int?
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Table {
  id          Int         @id @default(autoincrement())
  tableNumber Int         @unique
  capacity    Int
  status      TableStatus @default(AVAILABLE)
  location    String?

  reservations Reservation[]
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
}

model Payment {
  id              Int           @id @default(autoincrement())
  amount          Float
  method          PaymentMethod
  status          PaymentStatus @default(PENDING)
  reservationId   Int?          @unique
  transactionId   String?       @unique
  transactionUuid String?       @unique
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  reservation Reservation? @relation(fields: [reservationId], references: [id])
}

enum PaymentMethod {
  CASH
  ESEWA
  KHALTI
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User?    @relation(fields: [userId], references: [id])
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Staff {
  id          Int      @id @default(autoincrement())
  userId      Int      @unique
  position    String
  department  String?
  hireDate    DateTime @default(now())
  salary      Float?
  bio         String?
  photo       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
