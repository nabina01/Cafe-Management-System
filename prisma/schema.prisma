generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id             Int           @id @default(autoincrement())
  name           String
  email          String        @unique
  password       String
  profilePicture String?
  reservations   Reservation[]
  createdAt      DateTime      @default(now())
  role           Role          @default(USER)

  refreshTokens  RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  ActivityLog ActivityLog[]
}

enum Role {
  ADMIN
  USER
  STAFF
}

model InventoryItem {
  id            Int       @id @default(autoincrement())
  name          String
  category      String
  currentStock  Int
  quality       String
  supplier      String?
  lastRestocked DateTime?
  expiryDate    DateTime?
  minStock      Int       @default(10)
  reorderLevel  Int?      @default(5)
}

enum InventoryCategory {
  BEVERAGE
  FOOD
  UTENSILS
  CLEANING
  OTHER
}

model MenuItem {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  available   Boolean @default(true)
  image       String?
}

enum MenuCategory {
  APPETIZER
  MAIN_COURSE
  DESSERT
  BEVERAGE
  SNACK
}

model Order {
  id               Int                @id @default(autoincrement())
  customerName     String
  items            Json
  totalAmount      Float
  status           OrderStatus        @default(PENDING)
  paymentStatus    OrderPaymentStatus @default(PENDING)
  orderPaymentType OrderPaymentType   @default(CASH)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  servedAt         DateTime?
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum OrderPaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum OrderPaymentType {
  CASH
  MOBILEBANKING
  ESEWA
  KHALTI
}

model Reservation {
  id              Int               @id @default(autoincrement())
  customerName    String
  email           String?
  phone           String?
  reservationTime DateTime
  numberOfPeople  Int
  tableNumber     Int?
  specialRequests String?
  status          ReservationStatus @default(PENDING)
  reservationId   String            @unique
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  Payment         Payment?

  userId  Int?
  user    User?  @relation(fields: [userId], references: [id])
  Table   Table? @relation(fields: [tableId], references: [id])
  tableId Int?
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Table {
  id          Int         @id @default(autoincrement())
  tableNumber Int         @unique
  capacity    Int
  status      TableStatus @default(AVAILABLE)
  location    String?

  reservations Reservation[]
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
}

model Payment {
  id            Int           @id @default(autoincrement())
  amount        Float
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  reservationId Int?          @unique
  transactionId String?       @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  type          PaymentType   @default(INDIVIDUAL)

  reservation Reservation? @relation(fields: [reservationId], references: [id])
}

enum PaymentType {
  RESERVATION
  INDIVIDUAL
}

enum PaymentMethod {
  CASH
  ESEWA
  KHALTI
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model ActivityLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String   // e.g., "ORDER_CREATED", "RESERVATION_CONFIRMED"
  entity    String   // e.g., "Order", "Reservation"
  entityId  Int?
  details   String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User?     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      User?     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}

